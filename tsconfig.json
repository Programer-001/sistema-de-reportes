{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",     // ðŸ§¹ Evita archivos .js en src/
    "rootDir": "src"       // ðŸ‘ˆ Deja claro de dÃ³nde parte
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
